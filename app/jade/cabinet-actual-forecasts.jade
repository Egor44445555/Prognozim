html
    title Моя статистика
    include ./blocks/head.jade

    body
        include ./blocks/header.jade

        include ./blocks/left-panel.jade
        
        .wrapper
            .first-image-bg
                img(src="../images/hero-image-17.jpg", alt="").desktop
                img(src="../images/hero-image-mobile-17.jpg", alt="").mobile

            .container-block
                .cabinet-block-wrap
                    .sidebar
                        .person
                            .chart#rank(data-percent="40" data-rotate="-90" data-size="200" data-line="7")
                            .image
                                img(src="../images/assets/avatar-6.jpg", alt="")
                            .name Петр Петров
                            .rank Ранг 2

                        include ./blocks/cabinet-menu.jade

                    .cabinet-info
                        h1.text-center-t Актуальные прогнозы

                        .column-wrap.mt-120.mt-t-180
                            .column.wide
                                include ./blocks/product-list.jade

                            .column.narrow
                                include ./blocks/events.jade
            .mt-t-60

        include ./blocks/footer.jade
        include ./blocks/scripts.jade
