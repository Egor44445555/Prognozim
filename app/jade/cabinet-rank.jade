html
    title Ранг
    include ./blocks/head.jade

    body
        include ./blocks/header.jade

        include ./blocks/left-panel.jade
        
        .wrapper
            .first-image-bg
                img(src="../images/hero-image-23.jpg", alt="").desktop
                img(src="../images/hero-image-mobile-23.jpg", alt="").mobile

            .container-block
                .cabinet-block-wrap
                    .sidebar
                        .person
                            .chart#rank(data-percent="40" data-rotate="-90" data-size="200" data-line="7")
                            .image
                                img(src="../images/assets/avatar-6.jpg", alt="")
                            .name Петр Петров
                            .rank Ранг 2

                        include ./blocks/cabinet-menu.jade

                    .cabinet-info
                        .title-wrap.text-center-t.mt-0
                            h1 Ранг

                        .rank-list-wrap
                            .rank-list
                                .rank-list--item
                                    .rank-block
                                        .chart.rank-big(data-percent="40" data-rotate="-90" data-size="200" data-line="20")
                                        .count 
                                            span 2
                                        .label Ваш ранг
                                .rank-list--item
                                    .list
                                        .list--item
                                            .icon.icon-check-circle
                                            .text Создание прогнозов
                                        .list--item
                                            .icon.icon-check-circle
                                            .text Продажа прогнозов
                                        .list--item
                                            .icon.icon-cross-circle
                                            .text.color-gray Прогнозы без описания
                                        .list--item
                                            .icon.icon-cross-circle
                                            .text.color-gray Цена подписки на мои прогнозы 
                                                a(href="#subscriptionPrice").modal-btn.color-red
                                                    span.dashed 500 ₽ Изменить
                                .rank-list--item.small.blue
                                    .rank-step
                                        .icon.icon-star-empty
                                        .title Ранг 1
                                        p Только бесплатные прогнозы
                                .rank-list--item.small.blue
                                    .rank-step
                                        .icon.icon-two-star-empty
                                        .title Ранг 2
                                        p Возможность продавать свои прогнозы
                                .rank-list--item.small
                                    .rank-step
                                        .icon.icon-three-star-empty
                                        .title Ранг 3
                                        p Возможность делать прогнозы без описания
                                .rank-list--item.small
                                    .rank-step
                                        .icon.icon-four-star-empty
                                        .title Ранг 4
                                        p Возможность ставить свою цену за прогноз

            .mt-t-80

        include ./blocks/footer.jade
        include ./blocks/scripts.jade
