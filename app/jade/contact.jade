                                    span.info 
                                        span.title Telegram
                                        span.link @prognozim
                                a(href="https://vk.com/prognozim" target="_blank").contact-list--item
                                    span.icon.icon-vk
                                    span.info 
                                        span.title Vkontakte
                                        span.link vk.com/prognozim
