                                    span.icon.icon-instagram
                                    span.info 
                                        span.title Instagram
                                        span.link @prognozim
                                a(href="mailto:info@prognozim.ru").contact-list--item
                                    span.icon.icon-mail
                                    span.info 
                                        span.title Email
                                        span.link info@prognozim.ru

