html
    title Укажите новый пароль
    include ./blocks/head.jade

    body
        include ./blocks/header-not-authorized.jade

        include ./blocks/left-panel.jade

        .wrapper
            .first-image-bg.mobile-fill
                img(src="../images/hero-image-2.jpg", alt="")

            .hero-block
                .container-block
                    .wrap
                        .info
                            .title-wrap
                                h1.title Укажите новый
                                .h1.sub-title пароль

                        form.form(action="/success-form-password.html")
                            .row 
                                .col.wide
                                    .input-wrap
                                        input(type="password" placeholder="Ваш новый пароль" required).input.password
                                        .label 
                                            span Новый пароль*
                                        .eye.icon-eye

                             .row
                                .col.wide
                                    .input-wrap
                                        input(type="password" placeholder="Повторите ваш новый пароль" required).input.password-confirm
                                        .label 
                                            span Повторите новый пароль*
                                        .eye.icon-eye

                                    .btn.btn-red.btn-shadow.submit Изменить пароль


        include ./blocks/scripts.jade
